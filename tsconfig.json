{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "dist",
    "watch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*", "app.ts"],
  "exclude": ["views", "public"]
}
